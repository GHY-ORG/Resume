@model BaoMing.Models.XbjztModels
@{
    ViewBag.Title = "校报记者团-简历投递";
}
<div class="main-z">
    <div class="row">
        <div class="know1 col-md-12">
            <div class="knowUs">
                校报记者团-简历投递<span>加 * 的为必填项</span>
            </div>
            <div class="knowUs1">
                SUBMITING RESUME
            </div>
            <div class="know-line">
            </div>
        </div>
    </div>
    <div class="row submit-content">
        <div class="col-md-12">
            @using (Html.BeginForm("Xbjzt", "BaoMing", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <h3 class="bm_title_3">
                    个人信息
                </h3>
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 col-xs-3 control-label bm_lable_in" })
                    <div class="col-md-10  col-xs-9">
                        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Sex, new { @class = "col-md-2 col-xs-3 control-label bm_lable_in" })
                    <div class="col-md-10  col-xs-9">
                        @Html.EditorFor(m => m.Sex, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Sex, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Department, new { @class = "col-md-2 col-xs-3 control-label bm_lable_in" })
                    <div class="col-md-10  col-xs-9">
                        @Html.EditorFor(m => m.Department, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Department, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 col-xs-3 control-label bm_lable_in" })
                    <div class="col-md-10  col-xs-9">
                        @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.QQ, new { @class = "col-md-2 col-xs-3 control-label bm_lable_in" })
                    <div class="col-md-10  col-xs-9">
                        @Html.EditorFor(m => m.QQ, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.QQ, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.TeChang, new { @class = "col-md-2 col-xs-3 control-label bm_lable_in" })
                    <div class="col-md-10  col-xs-9">
                        @Html.EditorFor(m => m.TeChang, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.TeChang, "", new { @class = "text-danger" })
                    </div>
                </div>

                <h3 class="bm_title_3">
                    意向组别:
                </h3>
                //提示意向部门未被选中
                @Html.ValidationMessage("yixiang", "", new { @class = "text-danger" })
                <div class="zhiyuan-k col-md-12">
                    <div class="zhiyuan-p col-md-3 col-sm-6 col-xs-12">
                        @Html.CheckBoxFor(m => m.WenZi.Checked, new { @class = "form-control chk" })
                        <label class="control-label chk_label" for="WenZi_Checked"></label>
                        @Html.LabelFor(m => m.WenZi, new { @class = "control-label" })
                    </div>
                    <div class="zhiyuan-p col-md-3 col-sm-6 col-xs-12">
                        @Html.CheckBoxFor(m => m.SheYing.Checked, new { @class = "form-control chk" })
                        <label class="control-label chk_label" for="SheYing_Checked"></label>
                        @Html.LabelFor(m => m.SheYing, new { @class = "control-label" })
                    </div>
                    <div class="zhiyuan-p col-md-3 col-sm-6 col-xs-12">
                        @Html.CheckBoxFor(m => m.MeiBian.Checked, new { @class = "form-control chk" })
                        <label class="control-label chk_label" for="MeiBian_Checked"></label>
                        @Html.LabelFor(m => m.MeiBian, new { @class = "control-label" })
                    </div>
                    <div class="zhiyuan-p col-md-3 col-sm-6 col-xs-12">
                        @Html.CheckBoxFor(m => m.WangLuo.Checked, new { @class = "form-control chk" })
                        <label class="control-label chk_label" for="WangLuo_Checked"></label>
                        @Html.LabelFor(m => m.WangLuo, new { @class = "control-label" })
                    </div>
                </div>
               
                <h3 class="bm_title_3">
                    自我介绍:
                </h3>
                <div class="zhiyuan-p zhiyuan-textarea col-md-12">
                    @Html.TextAreaFor(m => m.JianJie, new { @class = "form-control", rows = "4", cols = "5" })
                    @Html.ValidationMessageFor(m => m.JianJie, "", new { @class = "text-danger" })
                </div>
                <div class="form-group" id="submit">
                    <div class="col-md-offset-1 col-md-2">
                        <input type="submit" class="btn btn-default" value="提交" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
