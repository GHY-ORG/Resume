@model BaoMing.Models.XywhModels
@{
    ViewBag.Title = "校园文化研究社-简历投递";
}
<div class="main-z">
    <div class="row">
        <div class="know1 col-md-12">
            <div class="knowUs">
                校园文化研究社-简历投递<span>加 * 的为必填项</span>
            </div>
            <div class="knowUs1">
                SUBMITING RESUME
            </div>
            <div class="know-line">
            </div>
        </div>
    </div>
    <div class="row submit-content">
        <div class="col-md-12">
            @using (Html.BeginForm("Xywh", "BaoMing", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <h3 class="bm_title_3">
                    个人信息
                </h3>
                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 col-xs-3 control-label bm_lable_in" })
                    <div class="col-md-10  col-xs-9">
                        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Sex, new { @class = "col-md-2 col-xs-3 control-label bm_lable_in" })
                    <div class="col-md-10 col-xs-9">
                        @Html.EditorFor(m => m.Sex, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Sex, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Department, new { @class = "col-md-2 col-xs-3 control-label bm_lable_in" })
                    <div class="col-md-10 col-xs-9">
                        @Html.EditorFor(m => m.Department, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Department, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Grademajor, new { @class = "col-md-2 col-xs-3 control-label bm_lable_in" })
                    <div class="col-md-10 col-xs-9">
                        @Html.EditorFor(m => m.Grademajor, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Grademajor, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 col-xs-3 control-label bm_lable_in" })
                    <div class="col-md-10 col-xs-9">
                        @Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.QQ, new { @class = "col-md-2 col-xs-3 control-label bm_lable_in" })
                    <div class="col-md-10 col-xs-9">
                        @Html.EditorFor(m => m.QQ, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.QQ, "", new { @class = "text-danger" })
                    </div>
                </div>
                <h3 class="bm_title_3">
                    意向部门:
                </h3>
                //提示意向部门未被选中
                @Html.ValidationMessage("yixiang", "", new { @class = "text-danger" })
                <div class="zhiyuan-k col-md-12">
                    <div class="zhiyuan-p col-md-3 col-sm-6 col-xs-12">
                        @Html.CheckBoxFor(m => m.CheHua.Checked, new { @class = "form-control chk" })
                        <label class="control-label chk_label" for="CheHua_Checked"></label>
                        @Html.LabelFor(m => m.CheHua, new { @class = "control-label" })
                    </div>
                    <div class="zhiyuan-p col-md-3 col-sm-6 col-xs-12">
                        @Html.CheckBoxFor(m => m.GongGuan.Checked, new { @class = "form-control chk" })
                        <label class="control-label chk_label" for="GongGuan_Checked"></label>
                        @Html.LabelFor(m => m.GongGuan, new { @class = "control-label" })
                    </div>
                    <div class="zhiyuan-p col-md-3 col-sm-6 col-xs-12">
                        @Html.CheckBoxFor(m => m.MiShu.Checked, new { @class = "form-control chk" })
                        <label class="control-label chk_label" for="MiShu_Checked"></label>
                        @Html.LabelFor(m => m.MiShu, new { @class = "control-label" })
                    </div>
                    <div class="zhiyuan-p col-md-3 col-sm-6 col-xs-12">
                        @Html.CheckBoxFor(m => m.XuanWen.Checked, new { @class = "form-control chk" })
                        <label class="control-label chk_label" for="XuanWen_Checked"></label>
                        @Html.LabelFor(m => m.XuanWen, new { @class = "control-label" })
                    </div>
                    <div class="zhiyuan-p col-md-3 col-sm-6 col-xs-12">
                        @Html.CheckBoxFor(m => m.XuanMei.Checked, new { @class = "form-control chk" })
                        <label class="control-label chk_label" for="XuanMei_Checked"></label>
                        @Html.LabelFor(m => m.XuanMei, new { @class = "control-label" })
                    </div>
                    <div class="zhiyuan-p col-md-3 col-sm-6 col-xs-12">
                        @Html.CheckBoxFor(m => m.XueShu.Checked, new { @class = "form-control chk" })
                        <label class="control-label chk_label" for="XueShu_Checked"></label>
                        @Html.LabelFor(m => m.XueShu, new { @class = "control-label" })
                    </div>
                </div>
                <h3 class="bm_title_3">
                    是否服从调剂:
                </h3>
                <div class="zhiyuan-k col-md-12">
                    <div class="radio col-md-5 col-xs-5 col-md-offset-2">
                        @Html.RadioButtonFor(m => m.TiaoJi, true, new { @class = "col-md-1 " })
                        @Html.Label("是",new { @class = "control-label" })
                    </div>
                    <div class="radio col-md-5 col-xs-5">
                        @Html.RadioButtonFor(m => m.TiaoJi,false, new { @class = "col-md-1" })
                        @Html.Label("否", new { @class = "control-label" })
                    </div>
                </div>
                <h3 class="bm_title_3">
                    兴趣特长:
                </h3>
                <div class="zhiyuan-k col-md-12">
                    <div class="zhiyuan-p col-md-4 col-sm-6 col-xs-12">
                        @Html.CheckBoxFor(m => m.Te1.Checked, new { @class = "form-control chk" })
                        <label class="control-label chk_label" for="Te1_Checked"></label>
                        @Html.LabelFor(m => m.Te1, new { @class = "control-label" })
                    </div>
                    <div class="zhiyuan-p col-md-4 col-sm-6 col-xs-12">
                        @Html.CheckBoxFor(m => m.Te2.Checked, new { @class = "form-control chk" })
                        <label class="control-label chk_label" for="Te2_Checked"></label>
                        @Html.LabelFor(m => m.Te2, new { @class = "control-label" })
                    </div>
                    <div class="zhiyuan-p col-md-4 col-sm-6 col-xs-12">
                        @Html.CheckBoxFor(m => m.Te3.Checked, new { @class = "form-control chk" })
                        <label class="control-label chk_label" for="Te3_Checked"></label>
                        @Html.LabelFor(m => m.Te3, new { @class = "control-label" })
                    </div>
                    <div class="zhiyuan-p col-md-4 col-sm-6 col-xs-12">
                        @Html.CheckBoxFor(m => m.Te4.Checked, new { @class = "form-control chk" })
                        <label class="control-label chk_label" for="Te4_Checked"></label>
                        @Html.LabelFor(m => m.Te4, new { @class = "control-label" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.TeOther, new { @class = "col-md-1 col-xs-2 control-label big-font" })
                    <div class="col-md-5 col-xs-9">
                        @Html.EditorFor(m => m.TeOther, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <h3 class="bm_title_3">
                    自我介绍:
                </h3>
                <div class="zhiyuan-p zhiyuan-textarea col-md-12">
                    @Html.TextAreaFor(m => m.ZhiWo, new { @class = "form-control zhiyuan-textArea",rows = "4", cols = "5" })
                    @Html.ValidationMessageFor(m => m.ZhiWo, "", new { @class = "text-danger" })
                </div>
                <h3 class="bm_title_3">
                    社团之我见:
                </h3>
                <div class="zhiyuan-p zhiyuan-textarea col-md-12">
                    @Html.TextAreaFor(m => m.WoJian, new { @class = "form-control",rows = "4", cols = "5" })
                    @Html.ValidationMessageFor(m => m.WoJian, "", new { @class = "text-danger" })
                </div>
                <div class="form-group" id="submit">
                    <div class="col-md-offset-1 col-md-2">
                        <input type="submit" class="btn btn-default" value="提交" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
